<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.sa10012sdk.demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_bg"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin" >

        <RelativeLayout
            android:id="@+id/layout_start_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height"
            android:background="@drawable/page_item_bg" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_right"
                android:text="@string/sa_start_time"
                android:textColor="@drawable/label_text_color"
                android:textSize="@dimen/Title_3" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_3" />
        </RelativeLayout>

        <include layout="@layout/divider_line" />

        <RelativeLayout
            android:id="@+id/layout_repeat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height"
            android:background="@drawable/page_item_bg" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_right"
                android:text="@string/reply"
                android:textColor="@drawable/label_text_color"
                android:textSize="@dimen/Title_3" />

            <TextView
                android:id="@+id/tv_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_5" />
        </RelativeLayout>

        <include layout="@layout/divider_line" />

        <RelativeLayout
            android:id="@+id/layout_music"
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height"
            android:background="@drawable/page_item_bg" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_right"
                android:text="@string/music"
                android:textColor="@drawable/label_text_color"
                android:textSize="@dimen/Title_3" />

            <TextView
                android:id="@+id/tv_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_3" />
        </RelativeLayout>

        <include layout="@layout/divider_line" />

        <RelativeLayout
            android:id="@+id/layout_volume"
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height"
            android:background="@drawable/page_item_bg" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_right"
                android:text="@string/volume"
                android:textColor="@drawable/label_text_color"
                android:textSize="@dimen/Title_3" />

            <TextView
                android:id="@+id/tv_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_3" />
        </RelativeLayout>

        <include layout="@layout/divider_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/light_wake"
                android:textColor="@drawable/label_text_color"
                android:textSize="@dimen/Title_3" />

            <CheckBox
                android:id="@+id/cb_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:button="@drawable/cb_switch_bg" />
        </RelativeLayout>

        <include layout="@layout/divider_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/alarm_sa"
                android:textColor="@drawable/label_text_color"
                android:textSize="@dimen/Title_3" />

            <CheckBox
                android:id="@+id/cb_aroma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:button="@drawable/cb_switch_bg" />
        </RelativeLayout>

        <include layout="@layout/divider_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/snooze_"
                android:textColor="@drawable/label_text_color"
                android:textSize="@dimen/Title_3" />

            <CheckBox
                android:id="@+id/cb_snooze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:button="@drawable/cb_switch_bg" />
        </RelativeLayout>

        <include layout="@layout/divider_line" />

        <RelativeLayout
            android:id="@+id/layout_snooze_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height"
            android:background="@drawable/page_item_bg" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_right"
                android:text="@string/snooze_duration"
                android:textColor="@drawable/label_text_color"
                android:textSize="@dimen/Title_3" />

            <TextView
                android:id="@+id/tv_snooze_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_3" />

            <include
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                layout="@layout/divider_line" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_tips_snooze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/COLOR_4"
            android:textSize="@dimen/Title_4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_preview"
            style="@style/common_bt"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="@string/preview_alarm"
            android:textSize="@dimen/Title_2" />

        <Button
            android:id="@+id/btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:text="@string/delete_alram"
            android:textColor="@color/red"
            android:textSize="@dimen/Title_3" />
    </LinearLayout>

</LinearLayout>