<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.sa10012sdk.demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_bg"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin" >

        <RelativeLayout
            android:id="@+id/layout_start_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height"
            android:background="@drawable/page_item_bg" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_right"
                android:text="@string/sa_start_time"
                android:textColor="@drawable/label_text_color"
                android:textSize="@dimen/Title_3" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_3" />
        </RelativeLayout>

        <include layout="@layout/divider_line" />

        <RelativeLayout
            android:id="@+id/layout_duration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height"
            android:background="@drawable/page_item_bg" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_right"
                android:text="@string/sa_last_time"
                android:textColor="@drawable/label_text_color"
                android:textSize="@dimen/Title_3" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_3" />
        </RelativeLayout>

        <include layout="@layout/divider_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_delete_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@null"
            android:text="@string/sa_delete"
            android:textColor="@color/red"
            android:textSize="@dimen/Title_3" />
    </LinearLayout>

</LinearLayout>